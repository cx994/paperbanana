# PaperBanana Environment Variables
# Copy this file to .env and fill in your keys.

# Google Gemini (free, no credit card): https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=

# Optional: route google-genai SDK through a custom API gateway/proxy.
# If set, PaperBanana will create the client with:
#   vertexai=True and http_options={"base_url": ..., "headers": {"Authorization": ...}}
# GOOGLE_GENAI_BASE_URL=https://your-proxy.example.com
# Either provide the full Authorization header value (recommended)...
# GOOGLE_GENAI_AUTHORIZATION=Bearer your_token
# ...or just the token (PaperBanana will prefix with "Bearer "):
# GOOGLE_GENAI_AUTH_TOKEN=your_token

# ── SSL ────────────────────────────────────────────────────────────
# Set to true to skip SSL certificate verification (corporate proxies)
SKIP_SSL_VERIFICATION=false
